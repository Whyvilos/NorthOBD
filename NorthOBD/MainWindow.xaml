<Window x:Class="NorthOBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorthOBD"
        Name="MainWindowScreen"
        mc:Ignorable="d"
        PreviewKeyDown="OnPreviewKeyDown"
        Closing="MainWindow_Closing"
        MaxWidth="1920"
        MaxHeight="1080"
        Title="NorthOBD" Height="1200" Width="1600" Icon="/ic2.png" Background="#FB2B3C68" ResizeMode="CanResize" WindowStyle="ThreeDBorderWindow" FontFamily="Tahoma" FontSize="14" HorizontalAlignment="Stretch" FontWeight="Bold">




    <Window.Resources>

