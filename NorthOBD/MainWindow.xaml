            <RowDefinition Height="63"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="5*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="LogoIm" Visibility="Visible" Grid.Row="0" Grid.ColumnSpan="3" Background="#FF1A213B">
            <Image Height="63" VerticalAlignment="Top" Source="/bg.png" Width="1920" Panel.ZIndex="-50" Grid.ColumnSpan="3" Stretch="None" StretchDirection="Both" HorizontalAlignment="Center"/>
        </Grid>
        <Image 
            MaxWidth="1920"
            MaxHeight="1080"
            x:Name="ImageBG" Source="/MUSC-WITH-NARRATIONS.png" Panel.ZIndex="-100" Margin="2,0,0,0" Grid.ColumnSpan="3" Grid.RowSpan="3" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>


        <!--Выбор и загрузка баз-->
        <Grid x:Name="SelectFile" Grid.Row="1" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="143*"/>
                <ColumnDefinition Width="114*"/>
                <ColumnDefinition Width="143*"/>
            </Grid.ColumnDefinitions>

            <TextBlock>
                Ваши карты
            </TextBlock>
            
            
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button MouseLeave="OpenFileMouseLeave" Style="{DynamicResource OpenFolderButton}"  MouseEnter="OpenFileMouseEnter" x:Name="btnOpenFile" Click="OpenOsuFolder" Background="{x:Null}" BorderBrush="{x:Null}">
                    <!--<Button.Effect>
                        <DropShadowEffect Color="#FF0020FF" Opacity="1" BlurRadius="5" Direction="0" RenderingBias="Quality" ShadowDepth="2"/>
                    </Button.Effect>-->
                    <Image Source="/OpenOSU.png"></Image>
                </Button>
                <TextBox Style="{DynamicResource TextBoxTest}" x:Name="txtEditor" Grid.Column="1" Text="Путь к OSU" Background="#4C2043A2" Foreground="White" TextAlignment="Justify" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" />
                <Button Content="загрузить" Click="DowloadDB"  Grid.Column="2" FontSize="18" Visibility="Collapsed">
                    <Button.Effect>
                        <DropShadowEffect Color="#FF0020FF" Opacity="1" BlurRadius="5" Direction="0" RenderingBias="Quality" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Grid>


        <!--Коллекции и мапы-->
        <Grid x:Name="BMandCollectionGrid" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="ваши карты в осу" Click="ViewBM" Style="{StaticResource DefaultButton}" >
                    <Button.Effect>
                        <DropShadowEffect Color="#FF0020FF" Opacity="1" BlurRadius="5" Direction="0" RenderingBias="Quality" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
                <Button Grid.Column="1" Content="ваши коллекции" Height="35" VerticalAlignment="Top" Click="ViewCollection" Style="{StaticResource DefaultButton}" >
                    <Button.Effect>
                        <DropShadowEffect Color="#FF0020FF" Opacity="1" BlurRadius="5" Direction="0" RenderingBias="Quality" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
            </Grid>


            <TextBox Name="TextFindBM" TextChanged="SortBM" Grid.Row="1" FontSize="16" Background="#FFB3D2FF">

            </TextBox>

            <ScrollViewer FlowDirection="RightToLeft" Visibility="Hidden" HorizontalAlignment="Left" x:Name="ScrollCollection" Grid.Row="2" Margin="0,0,0,0">

                <StackPanel  x:Name="BoxCollection" Width="495" FlowDirection="LeftToRight">
                    <StackPanel  Style="{StaticResource StackSnd}">
                        <Label Style="{StaticResource LabelFr}">sdfg</Label>
                        <Button Style="{StaticResource ButtonFs}" >Экспорт+</Button>
                        <Label Style="{StaticResource LabelSx}">fgffsdg</Label>
